<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Grammes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="UpRow" Height="20"/>
            <RowDefinition Name="CenterRow"/>
            <RowDefinition Name="DownRow" Height="100"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Background="Blue"/>
        <Button Grid.Row="1" Background="Brown"/>
        <Button Grid.Row="2" Background="Chartreuse"/>
    </Grid>
</Window>
