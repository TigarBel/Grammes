<UserControl x:Class="Client.View.UserControls.WarningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.View.UserControls"
             xmlns:common="clr-namespace:Client.View.UserControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <common:LeafView Grid.Row="0" Grid.RowSpan="3"/>
        <TextBlock Grid.Row="0" Text="Warning!" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="14"/>
        <TextBlock Grid.Row="1" Text="Text" TextWrapping="Wrap"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="14"/>
    </Grid>
</UserControl>
